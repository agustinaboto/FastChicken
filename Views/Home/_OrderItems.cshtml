@model List<FastChicken.Models.OrderItem>

@{
    var totalPrice = 0;
}

<div class="row mb-2" id="orderDetails">
    <ul class="list-group list-group-flush">
        @{if (Model != null)
            {
                foreach (var item in Model)
                {
                    totalPrice += int.Parse(item.Price);
                    <li class="list-group-item px-0 my-1">
                        <div class="row d-flex flex-row justify-content-between align-items-center">
                            <div class="col-5 d-flex">
                                <div class="container-fluid">
                                    <div class="row">
                                        <label class="text-primary"><b>@item.Name</b></label>
                                    </div>
                                    <div class="row">
                                        <label><b>@item.Price</b></label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="row justify-content-center">
                                    <label>@item.Side</label>
                                </div>
                                <div class="row justify-content-center">
                                    <label>@item.Drink</label>
                                </div>
                            </div>
                            @*<div class="col-3 d-flex justify-content-end">
                                    <button class='btn btn-success mx-1' onClick={modalUpdateItem}>
                                        <i class="bi bi-pencil-square"></i>
                                    </button>
                                    <button class='btn btn-danger mx-1' onClick={deleteItemMenu}>
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>*@
                        </div>
                    </li>
                }
            }
            else
            {

            }
        }

    </ul>
</div>
<div class="row mb-3 border rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <div class="p-2">
            <h4 class="fw-bold text-uppercase text-success">Total</h4>
        </div>
        <div class="p-2">
            <h4 class="fw-bold text-uppercase text-success">@totalPrice</h4>
        </div>
    </div>
</div>
<div class="row justify-content-end mb-1">
    <button class='btn btn-danger col-5 p-2 lead fw-bold'>Eliminar Todo<i class="mx-1 bi bi-trash3"></i></button>
</div>